<div class="container">
<%= form_tag questions_path, method: :get do %>
  <%= text_field_tag :search,
    params[:search], class: "form-control", placeholder: "Find a movie" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="questions">
        <% @questions.each do |question| %>
          <h4><%= question.query %></h4>
          <p><%= question.link.url %></p>

        <% end %>
      </div>
    </div>
  </div>
</div>


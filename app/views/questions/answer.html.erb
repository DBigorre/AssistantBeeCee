<div class="container-home">
    <div class="noresult">
      <p> Nous n'avons pas trouvé de réponse à votre question </p>
      <span style='font-size:20px;'>&#128533;</span>
    </div>

  <div class="bloc-suggestions">
    <div class= "suggestions_questions">
      <p> Nos suggestions :</p>
        <div class="questions">
        
        <% @question.query.split.each do |query| %>
            <% if Question::LOCALISATION.include?(query) %>
                <% @answer = Question.tagged_with("Localisation") %>
                <% @answer.each do |answer| %>
                  <p><%= link_to answer.query, answer.link.url %> </p>
                <% end %>
            <% elsif Question::HORAIRES.include?(query) %>
                <%  @answer = Question.tagged_with("Horaires") %>
                <% @answer.each do |answer| %>
                 <p><%= link_to answer.query, answer.link.url %></p>
                <% end %>
            <% elsif Question::COLLABORATEUR.include?(query) %>
                <%  @answer = Question.tagged_with("Collaborateurs") %>
                <% @answer.each do |answer| %>
             <p><%= link_to answer.query, answer.link.url %> </p>
                <% end %>
            <% elsif Question::METIER.include?(query) %>
                <%  @answer = Question.tagged_with("Métiers") %>
                <% @answer.each do |answer| %>
                <p><%= link_to answer.query, answer.link.url %> </p>
                <% end %>
            <% elsif Question::RESEAU_SOCIAL.include?(query) %>
                <%  @answer = Question.tagged_with("Réseaux Sociaux") %>
                <% @answer.each do |answer| %>
               <p><%= link_to answer.query, answer.link.url %> </p>
                <% end %>
            <% elsif Question::CLIENT.include?(query) %>
                <%  @answer = Question.tagged_with("Clients") %>
                <% @answer.each do |answer| %>
                   <p><%= link_to answer.query, answer.link.url %></p>
                <% end %>
            <% elsif Question::SITE_WEB.include?(query) %>
                <%  @answer = Question.tagged_with("Site web") %>
                <% @answer.each do |answer| %>
            <p><%= link_to answer.query, answer.link.url %></p>
                <% end %>
            <% elsif Question::EVENEMENT.include?(query) %>
                <%  @answer = Question.tagged_with("Evenement") %>
                <% @answer.each do |answer| %>
         <p><%= link_to answer.query, answer.link.url %> </p>
                <% end %>
            <% elsif Question::RECRUTEMENT.include?(query) %>
                <%  @answer = Question.tagged_with("Recrutement") %>
                <% @answer.each do |answer| %>
                  <p><%= link_to answer.query, answer.link.url %> </p>
                <% end %>
            <% elsif Question::CONTACT.include?(query) %>
                <%  @answer = Question.tagged_with("Contact") %>
                <% @answer.each do |answer| %>
              <p><%= link_to answer.query, answer.link.url %></p>
                <% end %>
            <% elsif query == @question.query.split.last && @answer == nil %>
                <%  @answer = Question.last(10) %>
                <% @answer.each do |answer| %>
                <p><%= link_to answer.query, answer.link.url %></p>
                <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</div>
